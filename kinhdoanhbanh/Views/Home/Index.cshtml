@model PagedList.IPagedList<kinhdoanhbanh.Models.SanPham>
@using PagedList.Mvc;

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- product section -->
<div class="container">
    <div class="row">
        <div class="col-lg-8 offset-lg-2 text-center">
            <div class="section-title">
                <br />
                <h3><span class="orange-text">Danh Sách </span>Các Loại Bánh Ngọt và Mặn</h3>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-md-12">
            <div class="product-filters">
                <ul>
                    <li class="active" data-filter="*"> <a href="@Url.Action("Index","Home",new { SeachString = ""})"> Tất Cả </a> </li>

                    @foreach (var item in (List<kinhdoanhbanh.Models.Loai>)Session["DanhMucHome"])
                    {
                        <a href="@Url.Action("Index","Home", new { filterLoai = item.MaLoai})">
                        <li>@item.TenLoai </li>  </a>
                    }


                </ul>
            </div>
        </div>
    </div>

    <div class="row">
        @foreach (var item in Model)
        {
            <div class="col-lg-4 col-md-6 text-center">
                <div class="single-product-item">
                    <div class="product-image">
                        <a href="@Url.Action("Details","Home",new { id = item.MaSP })"><img src="~/Content/Images/@item.HinhAnh" height="200" alt=""></a>
                    </div>
                    <h3>@item.TenSP</h3>
                    <p class="product-price"><span>Giá / @item.DVT </span> @(item.DonGiaBan == null ? "0" : item.DonGiaBan.Value.ToString("#,###") )<span style="color:black">vnđ</span> </p>
                    <a href="@Url.Action("AddToCart","GioHang",new {maSP = item.MaSP , soluong = 1 })" class="cart-btn"><i class="fas fa-shopping-cart"></i> Add to Cart</a>
                </div>
            </div>
        }
    </div>


    <div class="col-lg-12 text-center">
        <div>
            Trang @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) /
            @Model.PageCount
        </div>
        <div class="MenuTrang pagination-wrap">
            @Html.PagedListPager(Model, page => Url.Action("Index", new
            {
                page = page
            }))
        </div>
    </div>

